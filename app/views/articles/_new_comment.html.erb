<div class="new-comment-box" id="new-comment-box">
  <% if signed_in? %>
    <%= form_for([@article, @comment], :html => {:class => "form-horizontal"}) do |f| %>
      <h4 class="comment-header">Add a comment:</h4>
      <div class="col-md-12">
        <%= f.label :body, "Comments" %>
      </div>
      <div class="col-md-12">
          <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="col-md-12 btn-submit">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>  
    <% end %>
  <% else %>
    <h4 class="comment-header">Comments: </h4>
  <% end %> 
</div>