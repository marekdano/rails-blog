<div class="new-comment-box" id="new-comment-box">
<% if signed_in? %>
  <%= form_for([@article, @comment], :html => {:class => "form-horizontal"}) do |f| %>
    <h4 class="new-comment-header">Add a review:</h4>
    <div class="col-md-12">
      <%= f.label :body, "Comments" %>
    </div>
    <div class="col-md-12">
        <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-md-12">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
  <% end %>
<% end %> 
</div>